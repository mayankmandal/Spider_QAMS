@page
@model Spider_QAMS.Pages.ManageCitiesModel
@{
    ViewData["Title"] = "Manage Cities";
    TempData["NavigationalPageName"] = "Manage Cities";
}

<div style="display:flex; flex-direction:column; align-items:center; min-height:20vh;">
    <!-- Title and Action Buttons -->
    <div class="row pt-1 mb-3" style="width:100%;">
        <div class="col text-start">
            <h4 class="rb-header">Manage Cities</h4>
        </div>
        <div class="col text-end">
            <button class="btn create-btn" onclick="showCreateForm()" style="background: linear-gradient(to bottom, #ffffff, #e0e0e0); color: #71797E;">
                <i class="fas fa-plus-circle"></i>
                &nbsp;Create New City
            </button>
        </div>
    </div>

    <!-- Search Section -->
    <div class="mb-3 mt-2 d-flex" style="justify-content: flex-start; width: 100%;">
        <label for="searchBy" class="me-2">Search by:</label>
        <select id="searchBy" class="form-select me-2" style="width:200px;">
            <option value="cityName">City Name</option>
            <option value="regionName">Region Name</option>
        </select>
        <label for="searchInput" class="me-2">Search value:</label>
        <input type="text" id="searchInput" class="form-control me-2" style="width: 300px;" />
        <button type="button" class="btn btn-outline-secondary me-2" id="searchBtn">Search</button>

        <!-- Reset button -->
        <button type="button" class="btn btn-outline-secondary me-2" id="resetBtn">Reset</button>
    </div>

    <!-- Cities Grid -->
    <div id="jsGridCities" class="mb-4"></div>

    <!-- Create New City Form (Hidden Initially) -->
    <div id="createFormDiv" style="display:none; flex-direction: column; align-items: center; min-height: 20vh;">
        <form method="post" asp-page-handler="Create" id="createCityForm">
            <div class="container form-control border-2 mb-2" style="display:flex; justify-content:space-around; height:auto; flex-direction:column;width: 45rem;">
                <div class="row pb-1 pt-2">
                    <div style="color:#17a2b8; text-align:center; font-size:1.7rem; font-weight:500">CREATE NEW CITY</div>
                    <div><hr /></div>
                </div>
                <div class="card">
                    <div class="card-header" style="background:#f8f8f8;">
                        <div class="card-title fw-bold" style="font-size:1.2rem">City Details</div>
                    </div>
                    <div class="card-body">
                        <!-- Validation Summary -->
                        <div asp-validation-summary="All" class="text-danger fw-bold"></div>

                        <!-- City Name Field -->
                        <div class="mb-3">
                            <label asp-for="CityViewModel.CityName" class="form-label"></label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-city"></i></span>
                                </div>
                                <input asp-for="CityViewModel.CityName" placeholder="City Name" class="form-control" />
                            </div>
                            <span asp-validation-for="CityViewModel.CityName" class="text-danger fw-bold"></span>
                        </div>

                        <!-- Region Dropdown Field -->
                        <div class="mb-3">
                            <label asp-for="CityViewModel.RegionData.RegionId" class="form-label"></label>
                            <select id="regionSelect" asp-for="CityViewModel.RegionData.RegionId" class="form-select striped-select" required>
                                <option value="" disabled selected>--Select Region--</option>
                                @foreach (var region in Model.Regions)
                                {
                                    <option value="@region.RegionId">@region.RegionName</option>
                                }
                            </select>
                            <span asp-validation-for="CityViewModel.RegionData.RegionId" class="text-danger fw-bold"></span>
                        </div>

                        <!-- Buttons for form submission -->
                        <div style="display: flex; justify-content: center; align-items: center; margin-top: 20px;">
                            <div class="row" style="width: 100%; max-width: 600px; display: flex; justify-content: space-around;">
                                <button type="submit" class="btn create-btn">Add City</button>
                                <button type="button" class="btn btn-secondary" onclick="hideAllForms()">Cancel</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <!-- Edit City Form (Hidden Initially) -->
    <div id="editFormDiv" style="display:none; flex-direction: column; align-items: center; min-height: 20vh;">
        <form method="post" asp-page-handler="Update">
            <input type="hidden" asp-for="CityViewModel.CityId" id="editCityId" />
            <div class="container form-control border-2 mb-2" style="display:flex; justify-content:space-around; height:auto; flex-direction:column;width: 45rem;">
                <div class="row pb-1 pt-2">
                    <div style="color:#17a2b8; text-align:center; font-size:1.7rem; font-weight:500">EDIT CITY</div>
                    <div><hr /></div>
                </div>
                <div class="card">
                    <div class="card-header" style="background:#f8f8f8;">
                        <div class="card-title fw-bold" style="font-size:1.2rem">City Details</div>
                    </div>
                    <div class="card-body">
                        <!-- Validation Summary -->
                        <div asp-validation-summary="All" class="text-danger fw-bold"></div>

                        <!-- City Name Field -->
                        <div class="mb-3">
                            <label asp-for="CityViewModel.CityName" class="form-label"></label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-city"></i></span>
                                </div>
                                <input asp-for="CityViewModel.CityName" id="editCityName" placeholder="City Name" class="form-control" />
                            </div>
                            <span asp-validation-for="CityViewModel.CityName" class="text-danger fw-bold"></span>
                        </div>

                        <!-- Region Dropdown Field -->
                        <div class="mb-3">
                            <label asp-for="CityViewModel.RegionData.RegionId" class="form-label"></label>
                            <select id="editRegionId" asp-for="CityViewModel.RegionData.RegionId" class="form-select striped-select" required>
                                <option value="" disabled>--Select Region--</option>
                                @foreach (var region in Model.Regions)
                                {
                                    <option value="@region.RegionId">@region.RegionName</option>
                                }
                            </select>
                            <span asp-validation-for="CityViewModel.RegionData.RegionId" class="text-danger fw-bold"></span>
                        </div>

                        <!-- Buttons for form submission -->
                        <div style="display: flex; justify-content: center; align-items: center; margin-top: 20px;">
                            <div class="row" style="width: 100%; max-width: 600px; display: flex; justify-content: space-around;">
                                <button type="submit" class="btn update-btn">Update City</button>
                                <button type="button" class="btn btn-secondary" onclick="hideAllForms()">Cancel</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <!-- Delete City Confirmation (Hidden Initially) -->
    <div id="deleteFormDiv" style="display:none; flex-direction: column; align-items: center; min-height: 20vh;">
        <form method="post" asp-page-handler="Delete">
            <input type="hidden" name="CityId" id="deleteCityId" />
            <div class="container form-control border-2 mb-2" style="display:flex; justify-content:space-around; height:auto; flex-direction:column;width: 45rem;">
                <div class="row pb-1 pt-2">
                    <div style="color:#dc3545; text-align:center; font-size:1.7rem; font-weight:500">DELETE CITY</div>
                    <div><hr /></div>
                </div>
                <div class="card">
                    <div class="card-body">
                        <!-- Validation Summary -->
                        <div asp-validation-summary="All" class="text-danger fw-bold"></div>

                        <!-- City Name Field -->
                        <div class="mb-3">
                            <label asp-for="CityViewModel.CityName" class="form-label"></label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-city"></i></span>
                                </div>
                                <input asp-for="CityViewModel.CityName" id="deleteCityName" placeholder="City Name" class="form-control" disabled />
                            </div>
                            <span asp-validation-for="CityViewModel.CityName" class="text-danger fw-bold"></span>
                        </div>

                        <!-- Region Dropdown Field -->
                        <div class="mb-3">
                            <label asp-for="CityViewModel.RegionData.RegionId" class="form-label"></label>
                            <select id="deleteRegionId" asp-for="CityViewModel.RegionData.RegionId" class="form-select striped-select">
                            </select>
                            <span asp-validation-for="CityViewModel.RegionData.RegionId" class="text-danger fw-bold"></span>
                        </div>

                        <p class="text">Are you sure you want to delete city <strong id="deleteCityPName"></strong>?</p>
                        <!-- Buttons for deletion confirmation -->
                        <div style="display: flex; justify-content: center; align-items: center; margin-top: 20px;">
                            <div class="row" style="width: 100%; max-width: 600px; display: flex; justify-content: space-around;">
                                <button type="submit" class="btn delete-btn">Confirm Delete</button>
                                <button type="button" class="btn btn-secondary" onclick="hideAllForms()">Cancel</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="./plugins/jsgrid/jsgrid.min.js"></script>
    <script asp-asp-append-version="true">
        const cities = @Html.Raw(Json.Serialize(Model.Cities));

        $(function () {
            // Initialize jsGrid with the searchBy functionality
            $("#jsGridCities").jsGrid({
                width: "100%",
                height: "400px",
                inserting: false,
                editing: false,
                sorting: true,
                paging: true,
                filtering: true,
                autoload: true,
                pageSize: 10,
                pageButtonCount: 5,
                controller: {
                    loadData: function (filter) {
                        return $.Deferred(function (dfd) {
                            var filteredData = $.grep(cities, function (item) {
                                // Filter based on the selected search criteria
                                if (filter.searchBy === "cityName") {
                                    return !filter.cityName || item.cityName.toLowerCase().includes(filter.cityName.toLowerCase());
                                } else if (filter.searchBy === "regionName") {
                                    return !filter.regionName || item.regionData.regionName.toLowerCase().includes(filter.regionName.toLowerCase());
                                }
                                return true;
                            });
                            dfd.resolve(filteredData);
                        }).promise();
                    }
                },
                fields: [
                    { name: "cityName", type: "text", title: "City Name", width: 100 },
                    { name: "regionData.regionName", type: "text", title: "Region Name", width: 100 },
                    {
                        title: "Actions",
                        width: 100,
                        align: "center",
                        itemTemplate: function (_, item) {
                            var editButton = $("<button>")
                                .addClass("btn btn-primary btn-sm me-1")
                                .html('<i class="fas fa-edit"></i>')
                                .on("click", function () {
                                    showEditForm(item.cityId, item.cityName, item.regionData.regionId);
                                });
                            var deleteButton = $("<button>")
                                .addClass("btn btn-danger btn-sm")
                                .html('<i class="fas fa-trash-alt"></i>')
                                .on("click", function () {
                                    showDeleteForm(item.cityId, item.cityName, item.regionData.regionId, item.regionData.regionName);
                                });
                            return $("<div>").append(editButton).append(deleteButton);
                        }
                    }
                ]
            });

            // Search functionality
            $('#searchBtn').on('click', function () {
                var searchBy = $('#searchBy').val();
                var searchValue = $('#searchInput').val();
                $("#jsGridCities").jsGrid("loadData", { searchBy: searchBy, [searchBy]: searchValue });
            });

            // Reset button
            $('#resetBtn').on('click', function () {
                $('#searchInput').val(''); // Clear search input
                $('#searchBy').val('cityName'); // Reset the search by dropdown to default value
                $("#jsGridCities").jsGrid("loadData", {}); // Reset grid data
            });
        });
        
        // Function to show the Create form
        function showCreateForm() {
            hideAllForms();
            $('#createFormDiv').show();
        }

        // Function to show the Edit Form
        function showEditForm(cityId, cityName, regionId) {
            hideAllForms();
            $('#editCityId').val(cityId);
            $('#editCityName').val(cityName);
            $('#editRegionId').val(regionId); // Set selected region for edit
            $('#editFormDiv').show();
        }

        // Function to show the Delete form
        function showDeleteForm(cityId, cityName, regionId, regionName) {
            hideAllForms();
            $('#deleteCityId').val(cityId);
            $('#deleteCityName').val(cityName);
            $('#deleteCityPName').text(cityName);
            $('#deleteRegionId').empty().append(new Option(regionName, regionId)).prop('disabled', true); // Set and disable the dropdown
            $('#deleteFormDiv').show();
        }

        // Function to hide All Forms
        function hideAllForms() {
            $('#createFormDiv, #editFormDiv, #deleteFormDiv').hide();
            clearValidationMessages();
        }

        // Function to clear validation messages and reset form validation state
        function clearValidationMessages(){
            // Clear validation messages and reset validation state for the create form
            var createForm = $('#createCityForm');
            if (createForm.length > 0) { 
                createForm.validate().resetForm(); // Clear valdiation errors
                createForm[0].reset(); // Reset form fields
            }

            // Clear validation messages and reset validation state for the edit form
            var editForm = $('#editFormDiv form');
            if (editForm.length > 0) {
                editForm.validate().resetForm();  // Clear validation errors
                editForm[0].reset();  // Reset form fields
            }

            // Clear validation messages and reset validation state for the delete form
            var deleteForm = $('#deleteFormDiv form');
            if (deleteForm.length > 0) {
                deleteForm.validate().resetForm();  // Clear validation errors
                deleteForm[0].reset();  // Reset form fields
            }
        }
    </script>
}
