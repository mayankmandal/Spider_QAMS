@page
@model Spider_QAMS.Pages.ManageContactsModel
@{
    ViewData["Title"] = "Manage Contacts";
    TempData["NavigationalPageName"] = "Manage Contacts";
}

<div style="display:flex; flex-direction:column; align-items:center; min-height:20vh;">
    <!-- Title and Action Buttons -->
    <div class="row pt-1 mb-3" style="width:100%;">
        <div class="col text-start">
            <h4 class="rb-header">Manage Contacts</h4>
        </div>
        <div class="col text-end">
            <button class="btn create-btn" onclick="showCreateContactForm()" style="background: linear-gradient(to bottom, #ffffff, #e0e0e0); color: #71797E;">
                <i class="fas fa-plus-circle"></i>
                &nbsp;Create New Contact
            </button>
        </div>
    </div>

    <div style="overflow-x:auto; max-height:20rem; width: 100%;" class="mb-4">
        <!-- Table: List of Existing Cities -->
        <table class="table table-bordered table-striped text-center">
            <thead class="table-header" style="background: linear-gradient(to bottom, #59636E, #6A7682); color: white;">
                <tr>
                    <th>Designation</th>
                    <th>Name</th>
                    <th>Email Address</th>
                    <th>Mobile Number</th>
                    <th>Fax Number</th>
                    <th>Office Phone</th>
                    <th>Branch Name</th>
                    <th>Sponsor</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var contact in Model.contactVMList)
                {
                    <tr>
                        <td>@contact.Designation</td>
                        <td>@contact.Name</td>
                        <td>@contact.EmailID</td>
                        <td>@contact.Mobile</td>
                        <td>@contact.Fax</td>
                        <td>@contact.OfficePhone</td>
                        <td>@contact.BranchName</td>
                        <td>@contact.SponsorName</td>
                        <td style="white-space: nowrap;">
                            <!-- Edit Button -->
                            <button type="button" class="btn btn-primary btn-sm" onclick="showEditContactForm('@contact.ContactId','@contact.Designation', '@contact.Name', '@contact.EmailID','@contact.Mobile','@contact.Fax','@contact.OfficePhone','@contact.BranchName', '@contact.SponsorId')">
                                <i class="fas fa-edit"></i> Edit
                            </button>
                            <!-- Delete Button -->
                            <button type="button" class="btn btn-danger btn-sm" onclick="showDeleteContactForm('@contact.ContactId','@contact.Designation', '@contact.Name', '@contact.EmailID','@contact.Mobile','@contact.Fax','@contact.OfficePhone','@contact.BranchName', '@contact.SponsorId', '@contact.SponsorName')">
                                <i class="fas fa-trash-alt"></i> Delete
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Create New Contact Form (Hidden Initially) -->
    <div id="createContactFormDiv" style="display:none; flex-direction: column; align-items: center; min-height: 20vh;">
        <form method="post" asp-page-handler="Create" id="createContactForm">
