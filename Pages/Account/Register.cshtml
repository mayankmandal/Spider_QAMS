@page
@model Spider_QAMS.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register User";
    TempData["NavigationalPageName"] = "Login";
}
<div class="mb-2" style="display:flex; flex-direction:column;justify-content:space-evenly;">
    <form method="post">
        <div class="container form-control pt-4 pb-2" style="height:auto; background-color: #f4f0ec; width:45rem;">
            <div class="container form-control border-2 mb-2" style="display:flex; justify-content:space-around;height:auto; flex-direction:column;">
                <div class="row pb-1 pt-2">
                    <div style="color:#17a2b8; text-align:center; font-size:1.7rem;">User Registration</div>
                    <div>
                        <hr />
                    </div>
                </div>
                <div class="card">
                    <div class="card-header">
                        <div class="card-title fw-bold">Please complete your User Registration Gateway Profile</div>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-tool" data-card-widget="remove">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <!-- Validation Summary -->
                        <div asp-validation-summary="All" class="text-danger fw-bold"></div>

                        <div class="mb-3">
                            <label asp-for="RegisterVM.FullName" class="form-label"></label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-id-card"></i></span>
                                </div>
                                <input type="text" asp-for="RegisterVM.FullName" class="form-control" />
                            </div>
                            <span asp-validation-for="RegisterVM.FullName" class="text-danger fw-bold"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RegisterVM.Email" class="form-label"></label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                </div>
                                <input type="text" asp-for="RegisterVM.Email" class="form-control" />
                            </div>
                            <span asp-validation-for="RegisterVM.Email" class="text-danger fw-bold"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RegisterVM.ReTypeEmail" class="form-label"></label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-envelope"></i></span>
                                </div>
                                <input type="text" asp-for="RegisterVM.ReTypeEmail" class="form-control" />
                            </div>
                            <span asp-validation-for="RegisterVM.ReTypeEmail" class="text-danger fw-bold"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RegisterVM.Password" class="form-label"></label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-lock"></i></span>
                                </div>
                                <input type="password" asp-for="RegisterVM.Password" class="form-control password-toggle-input" />
                                <div class="input-group-append">
                                    <span class="input-group-text">
                                        <i class="fas fa-eye-slash password-toggle-icon" data-toggle="password"></i>
                                    </span>
                                </div>
                            </div>
                            <span asp-validation-for="RegisterVM.Password" class="text-danger fw-bold"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RegisterVM.ReTypePassword" class="form-label"></label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-lock"></i></span>
                                </div>
                                <input type="password" asp-for="RegisterVM.ReTypePassword" class="form-control password-toggle-input" />
                                <div class="input-group-append">
                                    <span class="input-group-text">
                                        <i class="fas fa-eye-slash password-toggle-icon" data-toggle="password"></i>
                                    </span>
                                </div>
                            </div>
                            <span asp-validation-for="RegisterVM.ReTypePassword" class="text-danger fw-bold"></span>
                        </div>

                        <!-- Buttons for form submission -->
                        <div style="display: flex; justify-content:space-around;height:auto;">
                            <div class="row">
                                <div class="col-2"></div>
                                <div class="col-3 me-4">
                                    <button type="submit" onclick="prepareFormSubmission()" class="btn create-btn" style="width:140px;">Register</button>
                                </div>
                                <div class="col-4 ms-3">
                                    <a asp-page="/Account/Login" class="btn btn-secondary" style="width:180px;">Login</a>
                                </div>
                                <div class="col-3"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section scripts {
    <partial name="_ValidationScriptsPartial" />
}