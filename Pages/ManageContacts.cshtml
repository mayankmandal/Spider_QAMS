@section scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="./plugins/jsgrid/jsgrid.min.js"></script>
    <script asp-append-version="true">
        const contactLists = @Html.Raw(Json.Serialize(Model.contactVMList));
        $(function () {
            $("#jsGrid").jsGrid({
                width: "100%",
                height: "400px",
                inserting: false,
                editing: false,
                sorting: true,
                paging: true,
                filtering: true,
                autoload: true,
                pageSize: 10,
                pageButtonCount: 5,

                data: contactLists,

                fields: [
                    { name: "designation", type: "text", title: "Designation", width: 100, filtering: true, sorting: true },
                    { name: "name", type: "text", title: "Name", width: 100, filtering: true, sorting: true },
                    { name: "emailID", type: "text", title: "Email Address", width: 150, filtering: true, sorting: true },
                    { name: "mobile", type: "text", title: "Mobile Number", width: 100, filtering: true, sorting: true },
                    { name: "fax", type: "text", title: "Fax Number", width: 100, filtering: true, sorting: true },
                    { name: "officePhone", type: "text", title: "Office Phone", width: 100, filtering: true, sorting: true },
                    { name: "branchName", type: "text", title: "Branch Name", width: 100, filtering: true, sorting: true },
                    { name: "sponsorName", type: "text", title: "Sponsor", width: 100, filtering: true, sorting: true },
                    {
                        title: "Actions",
                        width: 100,
                        align: "center",
                        itemTemplate: function (_, item) {
                            var editButton = $("<button>")
                                .addClass("btn btn-primary btn-sm me-1")
                                .html('<i class="fas fa-edit"></i>')
                                .on("click", function () {
                                    showEditContactForm(item.contactId, item.designation, item.name, item.emailID, item.mobile, item.fax, item.officePhone, item.branchName, item.sponsorId);
                                });
                            var deleteButton = $("<button>")
                                .addClass("btn btn-danger btn-sm")
                                .html('<i class="fas fa-trash-alt"></i>')
                                .on("click", function () {
                                    showDeleteContactForm(item.contactId, item.designation, item.name, item.emailID, item.mobile, item.fax, item.officePhone, item.branchName, item.sponsorId, item.sponsorName);
                                });
                            return $("<div>").append(editButton).append(deleteButton);
                        }
                    }
                ],
                // No data message when no data is available
                noDataContent: "No Sites found.",
                controller: {
                    loadData: function (filter) {
                        return $.Deferred(function (dfd) {
                            var filteredData = $.grep(contactLists, function (item) {
                                return (!filter.designation || item.designation.includes(filter.designation)) &&
                                    (!filter.name || item.name.includes(filter.name)) &&
                                    (!filter.emailID || item.emailID.includes(filter.emailID)) &&
                                    (!filter.mobile || item.mobile.includes(filter.mobile)) &&
                                    (!filter.fax || item.Fax.includes(filter.Fax)) &&
                                    (!filter.officePhone || item.officePhone.includes(filter.officePhone)) &&
                                    (!filter.branchName || item.branchName.includes(filter.branchName)) &&
                                    (!filter.sponsorName || item.sponsorName.includes(filter.sponsorName));
                            });
                            dfd.resolve(filteredData);
                        }).promise();
                    }
                },
            });
        });

        // Function to show the Create form
        function showCreateContactForm() {
            hideAllForms();
            $('#createContactFormDiv').show();
        }

        // Function to show the Edit Form
        function showEditContactForm(contactId, designation, contactName, emailID, mobile, fax, officePhone, branchName, sponsorId) {
            hideAllForms();
            $('#editContactId').val(contactId);
            $('#editContactName').val(contactName);
            $('#editContactDesignation').val(designation);
            $('#editContactEmailID').val(emailID);
            $('#editContactMobile').val(mobile);
            $('#editContactFax').val(fax);
            $('#editContactOfficePhone').val(officePhone);
            $('#editContactBranchName').val(branchName);
            $('#editContactSponsorId').val(sponsorId);
            $('#editContactFormDiv').show();
        }

        // Function to show the Delete form
        function showDeleteContactForm(contactId, designation, contactName, emailID, mobile, fax, officePhone, branchName, sponsorId, sponsorName) {
            hideAllForms();
            $('#deleteContactId').val(contactId);
            $('#deleteContactName').val(contactName);
            $('#deleteContactDesignation').val(designation);
            $('#deleteContactEmailID').val(emailID);
            $('#deleteContactMobile').val(mobile);
            $('#deleteContactFax').val(fax);
            $('#deleteContactOfficePhone').val(officePhone);
            $('#deleteContactBranchName').val(branchName);
            $('#deleteContactSponsorId').empty().append(new Option(sponsorName, sponsorId)).prop('disabled', true);
            $('#deleteContactPName').text(contactName);
            $('#deleteContactFormDiv').show();
        }

        // Function to hide All Forms
        function hideAllForms() {
            $('#createContactFormDiv, #editContactFormDiv, #deleteContactFormDiv').hide();
            clearValidationMessages();
        }

        // Function to clear validation messages and reset form validation state
        function clearValidationMessages() {
            // Clear validation messages and reset validation state for the edit form
            var editForm = $('#editContactFormDiv form');
            if (editForm.length > 0) {
                editForm.validate().resetForm();  // Clear validation errors
                editForm[0].reset();  // Reset form fields
            }

            // Clear validation messages and reset validation state for the delete form
            var deleteForm = $('#deleteContactFormDiv form');
            if (deleteForm.length > 0) {
                deleteForm.validate().resetForm();  // Clear validation errors
                deleteForm[0].reset();  // Reset form fields
            }
        }
    </script>
}

