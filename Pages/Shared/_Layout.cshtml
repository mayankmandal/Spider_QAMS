<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Spider_QAMS</title>

    <partial name="_Styles" />

</head>
<body class="hold-transition sidebar-mini layout-fixed">
    @if (ViewData["Title"] == "" || ViewData["Title"] == "Login")
    {
        <div class="wrapper">

            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper">
                <!-- Content Header (Page header) -->
                <div class="content-header">
                    <div class="container-fluid">
                        <div class="row mb-2">
                            <div class="col-sm-6">
                                <h1 class="m-0">Dashboard</h1>
                            </div><!-- /.col -->
                            <div class="col-sm-6">
                                <ol class="breadcrumb float-sm-right">
                                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                                    <li class="breadcrumb-item active">Dashboard v1</li>
                                </ol>
                            </div><!-- /.col -->
                        </div><!-- /.row -->
                    </div><!-- /.container-fluid -->
                </div>
                <!-- /.content-header -->
                <!-- Main content -->
                <div class="content">
                    <div class="container-fluid">
                        @RenderBody()
                    </div><!-- /.container-fluid -->
                </div>
                @await Html.PartialAsync("_GetToken")
            </div>

            <!-- Main Footer -->
            <partial name="_Footer" />

        </div>
    }
    else
    {
        <div class="wrapper">

            @await Html.PartialAsync("_GetToken")

            <!-- Main Top bar Container -->
            <partial name="_TopNavigation" />

            <!-- Main Sidebar Container -->
            <partial name="_MainNavigation" />

            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper">
                <!-- Content Header (Page header) -->
                <div class="content-header">
                    <div class="container-fluid">
                        <div class="row mb-2">
                            <div class="col-sm-6">
                                <h1 class="m-0">Dashboard</h1>
                            </div><!-- /.col -->
                            <div class="col-sm-6">
                                <ol class="breadcrumb float-sm-right">
                                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                                    <li class="breadcrumb-item active">Dashboard v1</li>
                                </ol>
                            </div><!-- /.col -->
                        </div><!-- /.row -->
                    </div><!-- /.container-fluid -->
                </div>
                <!-- /.content-header -->
                <!-- Main content -->
                <div class="content">
                    <div class="container-fluid">
                        @RenderBody()
                    </div><!-- /.container-fluid -->
                </div>

            </div>

            <aside class="control-sidebar control-sidebar-dark">
                <div class="p-3">
                    <h5>Title</h5>
                    <p>Sidebar content</p>
                </div>
            </aside>

            <!-- Main Footer -->
            <partial name="_Footer" />

        </div>

        <!-- Scripts -->

        <!-- Side Left Panel Features -->
        <script src="~/js/side-left-panel.js" asp-append-version="true"></script>
    }

    <!-- REQUIRED SCRIPTS -->
    <partial name="_Scripts" />

    @await RenderSectionAsync("Scripts", required: false)
    @await Html.PartialAsync("_Notification")
</body>
</html>