                <div class="row pb-1 pt-2">
                    <div style="color:#17a2b8; text-align:center; font-size:1.7rem; font-weight:500">CREATE NEW CONTACT</div>
                    <div><hr /></div>
                </div>
                <div class="card">
                    <div class="card-header" style="background:#f8f8f8;">
                        <div class="card-title fw-bold" style="font-size:1.2rem">Contact Details</div>
                    </div>
                    <div class="card-body">
                        <!-- Validation Summary -->
                        <div asp-validation-summary="All" class="text-danger fw-bold"></div>

                        <!-- Name Field -->
                        <div class="mb-3">
                            <label asp-for="ContactViewModel.Name" class="form-label"></label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                </div>
                                <input asp-for="ContactViewModel.Name" placeholder="Name" class="form-control" />
                            </div>
                            <span asp-validation-for="ContactViewModel.Name" class="text-danger fw-bold"></span>
                        </div>

                        <!-- Designation Field -->
                        <div class="mb-3">
                            <label asp-for="ContactViewModel.Designation" class="form-label"></label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-briefcase"></i></span>
                                </div>
                                <input asp-for="ContactViewModel.Designation" placeholder="Designation" class="form-control" />
                            </div>
                            <span asp-validation-for="ContactViewModel.Designation" class="text-danger fw-bold"></span>
                        </div>

                        <!-- Office Phone Field -->
                        <div class="mb-3">
                            <label asp-for="ContactViewModel.OfficePhone" class="form-label"></label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                </div>
                                <input asp-for="ContactViewModel.OfficePhone" placeholder="Office Phone" class="form-control" />
                            </div>
                            <span asp-validation-for="ContactViewModel.OfficePhone" class="text-danger fw-bold"></span>
                        </div>

                        <!-- Mobile Field -->
                        <div class="mb-3">
                            <label asp-for="ContactViewModel.Mobile" class="form-label"></label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-mobile-alt"></i></span>
                                </div>
                                <input asp-for="ContactViewModel.Mobile" placeholder="Mobile" class="form-control" />
                            </div>
                            <span asp-validation-for="ContactViewModel.Mobile" class="text-danger fw-bold"></span>
                        </div>

                        <!-- Email Address Field -->
                        <div class="mb-3">
                            <label asp-for="ContactViewModel.EmailID" class="form-label"></label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                </div>
                                <input asp-for="ContactViewModel.EmailID" placeholder="Email Address" class="form-control" />
                            </div>
                            <span asp-validation-for="ContactViewModel.EmailID" class="text-danger fw-bold"></span>
                        </div>

                        <!-- Fax Field -->
                        <div class="mb-3">
                            <label asp-for="ContactViewModel.Fax" class="form-label"></label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-fax"></i></span>
                                </div>
                                <input asp-for="ContactViewModel.Fax" placeholder="Fax Number" class="form-control" />
                            </div>
                            <span asp-validation-for="ContactViewModel.Fax" class="text-danger fw-bold"></span>
                        </div>

                        <!-- Branch Name Field -->
                        <div class="mb-3">
                            <label asp-for="ContactViewModel.BranchName" class="form-label"></label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-building"></i></span>
                                </div>
                                <input asp-for="ContactViewModel.BranchName" placeholder="Branch Name" class="form-control" />
                            </div>
                            <span asp-validation-for="ContactViewModel.BranchName" class="text-danger fw-bold"></span>
                        </div>

                        <!-- Sponsor Dropdown Field -->
                        <div class="mb-3">
                            <label asp-for="ContactViewModel.SponsorId" class="form-label"></label>
                            <select asp-for="ContactViewModel.SponsorId" class="form-select" required>
                                <option value="" disabled selected>--Select Sponsor--</option>
                                @foreach (var sponsor in Model.Sponsors)
                                {
                                    <option value="@sponsor.SponsorId">@sponsor.SponsorName</option>
                                }
                            </select>
                            <span asp-validation-for="ContactViewModel.SponsorId" class="text-danger fw-bold"></span>
                        </div>

                        <!-- Buttons for form submission -->
                        <div style="display: flex; justify-content: center; align-items: center; margin-top: 20px;">
                            <div class="row" style="width: 100%; max-width: 600px; display: flex; justify-content: space-around;">
                                <button type="submit" class="btn create-btn">Add Contact</button>
                                <button type="button" class="btn btn-secondary" onclick="hideAllForms()">Cancel</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>

