@page
@model Spider_QAMS.Pages.Users.UpdateUserModel
@{
    ViewData["Title"] = "Update User";
    TempData["NavigationalPageName"] = "Update User";
}

<div style="display:flex; flex-direction:column; justify-content:center; align-items:center; min-height:100vh;">
    <form id="updateProfileForm" method="post" enctype="multipart/form-data">
        <div class="container form-control border-2 mb-2" style="display:flex; justify-content:space-around; height:auto; flex-direction:column; width: 45rem;">
            <div class="row pb-1 pt-2">
                <div style="color:#17a2b8; text-align:center; font-size:1.7rem; font-weight:500">UPDATE USER</div>
                <div>
                    <hr />
                </div>
            </div>
            <div class="card">
                <div class="card-header" style="background:#f8f8f8;">
                    <div class="card-title fw-bold" style="font-size:1.2rem">User Details</div>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Validation Summary -->
                    <div asp-validation-summary="All" class="text-danger fw-bold"></div>

                    <!-- Profile Picture Field -->
                    <div class="text-center">
                        <div class="position-relative d-inline-block mx-auto mb-4">
                            @if (Model.UserProfilePathUrl != null)
                            {
                                <img src="@Model.UserProfilePathUrl" class="rounded-circle img-thumbnail" style="width: 150px; height: 150px;" id="loadedProfilePicture">
                                <div class="position-absolute bottom-0 end-0 rounded-circle bg-light p-1" style="transform: translate(20%, 20%);">
                                    <input class="d-none" asp-for="ProfileUsersData.PhotoFile" type="file" id="profile-img-file-input" />
                                    <label for="profile-img-file-input" class="rounded-circle bg-gradient-blue p-2" style="cursor: pointer; width: 40px; height: 40px;">
                                        <i class="fas fa-camera" style="font-size: 1.5rem;"></i>
                                    </label>
                                </div>
                            }
                        </div>
                        <br />
                        <span asp-validation-for="ProfileUsersData.PhotoFile" class="text-danger fw-bold"></span>
                    </div>

                    <!-- User ID and ID Number on one line -->
                    <div class="mb-3" style="display: flex; justify-content: space-between;">
                        <div style="flex: 1; margin-right: 10px;">
                            <label asp-for="ProfileUsersData.UserId" class="form-label"></label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-id-badge"></i></span>
                                </div>
                                <input asp-for="ProfileUsersData.UserId" placeholder="User ID" class="form-control" readonly />
                            </div>
                        </div>
                        <div style="flex: 1;">
                            <label asp-for="ProfileUsersData.Designation" class="form-label"></label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-briefcase"></i></span>
                                </div>
                                <input type="text" asp-for="ProfileUsersData.Designation" placeholder="Designation" class="form-control" />
                            </div>
                            <span asp-validation-for="ProfileUsersData.Designation" class="text-danger fw-bold"></span>
                        </div>
                    </div>

                    <!-- Full Name Field -->
                    <div class="mb-3">
                        <label asp-for="ProfileUsersData.FullName" class="form-label"></label>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-id-card"></i></span>
                            </div>
                            <input type="text" asp-for="ProfileUsersData.FullName" placeholder="Full Name" class="form-control" />
                        </div>
                        <span asp-validation-for="ProfileUsersData.FullName" class="text-danger fw-bold"></span>
                    </div>

                    <!-- Email and Mobile Number on one line -->
                    <div class="mb-3" style="display: flex; justify-content: space-between;">
                        <div style="flex: 1; margin-right: 10px;">
                            <label asp-for="ProfileUsersData.EmailID" class="form-label"></label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                </div>
                                <input type="email" asp-for="ProfileUsersData.EmailID" placeholder="Email Address" class="form-control" readonly />
                            </div>
                            <span asp-validation-for="ProfileUsersData.EmailID" class="text-danger fw-bold"></span>
                        </div>
                        <div style="flex: 1;">
                            <label asp-for="ProfileUsersData.PhoneNumber" class="form-label"></label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                </div>
                                <input type="tel" asp-for="ProfileUsersData.PhoneNumber" placeholder="Mobile Number" class="form-control" />
                            </div>
                            <span asp-validation-for="ProfileUsersData.PhoneNumber" class="text-danger fw-bold"></span>
                        </div>
                    </div>

                    <!-- Username -->
                    <div class="mb-3">
                        <label asp-for="ProfileUsersData.UserName" class="form-label"></label>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user-cog"></i></span>
                            </div>
                            <input type="text" asp-for="ProfileUsersData.UserName" placeholder="Username" class="form-control" />
                        </div>
                        <span asp-validation-for="ProfileUsersData.UserName" class="text-danger fw-bold"></span>
                    </div>

                    <!-- Change Password Section -->
                    <!-- New Password and ReType New Password ld -->
                    <div class="mb-3" style="display: flex; justify-content: space-between;">
                        <div style="flex: 1; margin-right: 10px;">
                            <label asp-for="ProfileUsersData.Password" class="form-label"></label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                </div>
                                <input type="password" asp-for="ProfileUsersData.Password" placeholder="New Password" class="form-control password-toggle-input" />
                                <div class="input-group-append">
                                    <span class="input-group-text">
                                        <i class="fas fa-eye-slash password-toggle-icon" data-toggle="password"></i>
                                    </span>
                                </div>
                            </div>
                            <span asp-validation-for="ProfileUsersData.Password" class="text-danger fw-bold"></span>
                        </div>
                        <div style="flex: 1;">
                            <label asp-for="ProfileUsersData.ReTypePassword" class="form-label"></label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                </div>
                                <input type="password" asp-for="ProfileUsersData.ReTypePassword" placeholder="Retype New Password" class="form-control password-toggle-input" />
                                <div class="input-group-append">
                                    <span class="input-group-text">
                                        <i class="fas fa-eye-slash password-toggle-icon" data-toggle="password"></i>
                                    </span>
                                </div>
                            </div>
                            <span asp-validation-for="ProfileUsersData.ReTypePassword" class="text-danger fw-bold"></span>
                        </div>
                    </div>

                    <!-- Dropdown to Select Profile Name -->
                    <div class="mb-3">
                        <label asp-for="ProfileUsersData.ProfileSiteData.ProfileName" class="form-label"></label>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            <select asp-for="ProfileUsersData.ProfileSiteData.ProfileName" class="form-select striped-select" id="profileSelect">
                                @foreach (var profile in Model.ProfilesData)
                                {
                                    @if (profile.ProfileId == Model.ProfileUsersData.ProfileSiteData.ProfileId)
                                    {
                                        <option value="@profile.ProfileName" data-profileid="@profile.ProfileId" selected>@profile.ProfileName</option>

                                    }
                                    else
                                    {
                                        <option value="@profile.ProfileName" data-profileid="@profile.ProfileId">@profile.ProfileName</option>
                                    }
                                }
                            </select>
                        </div>
                        <span asp-validation-for="ProfileUsersData.ProfileSiteData.ProfileName" class="text-danger fw-bold"></span>
                    </div>

                    <!-- Hidden fields Profile Id -->
                    <input type="hidden" asp-for="ProfileUsersData.ProfileSiteData.ProfileId" id="profileIdHidden" />

                    <!-- Is Active -->
                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" asp-for="ProfileUsersData.IsActive" id="isActiveCheckbox" />
                            <label class="form-check-label" for="isActiveCheckbox">
                                Active User
                            </label>
                        </div>
                    </div>

                    <!-- Is Active Directory User -->
                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" asp-for="ProfileUsersData.IsADUser" id="isActiveDirectoryUserCheckbox" />
                            <label class="form-check-label" for="isActiveDirectoryUserCheckbox">
                                Active Directory User
                            </label>
                        </div>
                    </div>

                    <!-- Buttons for form submission -->
                    <div style="display: flex; justify-content: center; align-items: center; margin-top: 20px;">
                        <div class="row" style="width: 100%; max-width: 600px; display: flex; justify-content: space-around;">
                            <button type="submit" onclick="prepareFormSubmission()" class="btn update-btn">Update User</button>
                            <a asp-page="/Users/ManageUser" type="button" class="btn btn-secondary">Back to All Users</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $('#profile-img-file-input').change(function () {
            // Get the selected file
            var file = this.files[0];

            if (file) {
                // Create a file reader object
                var reader = new FileReader();

                // Set up the FileReader Onload event
                reader.onload = function (e) {
                    // Set the SRC attribute of the image element to the data URL of the selected file
                    $('#loadedProfilePicture').attr('src', e.target.result);
                };

                // Read the selected file as a data URL
                reader.readAsDataURL(file);
            }
        });
    </script>
}
