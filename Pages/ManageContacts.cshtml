                            <label asp-for="ContactViewModel.Name" class="form-label"></label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                </div>
                                <input asp-for="ContactViewModel.Name" placeholder="Name" class="form-control" />
                            </div>
                            <span asp-validation-for="ContactViewModel.Name" class="text-danger fw-bold"></span>
                        </div>

                        <!-- Designation Field -->
