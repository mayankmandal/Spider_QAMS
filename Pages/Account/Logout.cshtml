@page
@model Spider_QAMS.Pages.Account.LogoutModel
@{
    ViewData["Title"] = "Logout";
    TempData["NavigationalPageName"] = "Logout";
}

<div style="display:flex; flex-direction:column; justify-content:center; align-items:center; min-height:20vh;">
    <form method="post">
        <div class="container form-control border-2 mb-2" style="display:flex; justify-content:space-around;height:auto; flex-direction:column;width:45rem;">
            <div class="row pb-1 pt-2">
                <div style="color:#17a2b8; text-align:center; font-size:1.7rem;">Logout</div>
                <div>
                    <hr />
                </div>
            </div>
            <div class="card">
                <div class="card-header" style="background:#f8f8f8;">
                    <div class="card-title fw-bold">Sign Out</div>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">

                    <div class="mb-3">
                        <label class="form-label" style="">Are you sure you want to logout?</label>
                    </div>

                    <!-- Buttons for form submission -->
                    <div class="d-flex justify-content-center">
                        <div class="d-flex justify-content-between align-items-center" style="gap: 20px;">
                            <button type="submit" class="btn create-btn btn-primary d-flex align-items-center justify-content-center">
                                <i class="fas fa-sign-out-alt"></i> &nbsp; Logout
                            </button>
                            <a asp-page="/Dashboard" class="btn btn-secondary d-flex align-items-center justify-content-center">
                                <i class="fas fa-times-circle"></i> &nbsp; Cancel
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section scripts {
    <partial name="_ValidationScriptsPartial" />
}