@page
@model Spider_QAMS.Pages.ManageContactsModel
@{
    ViewData["Title"] = "Manage Contacts";
    TempData["NavigationalPageName"] = "Manage Contacts";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary card-header-icon">
                <div class="card-icon">
                    <i class="material-icons">assignment</i>
                </div>
                <h4 class="card-title">Contacts Management</h4>
            </div>
            <div class="card-body">
                <div class="toolbar row d-flex justify-content-between">
                    <div class="d-flex">
                    </div>
                    <button onclick="showCreateForm()" class="btn btn-round btn-warning">
                        <i class="material-icons">
                            add_to_photos
                        </i> Create Contact
                    </button>
                </div>
                <div class="material-datatables">
                    <table id="contactsTable" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                        <thead>
                            <tr>
                                <th>Designation</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Mobile</th>
                                <th>Fax</th>
                                <th>Office Phone</th>
                                <th>Branch</th>
                                <th>Sponsor</th>
                                <th class="text-right">Actions</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Designation</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Mobile</th>
                                <th>Fax</th>
                                <th>Office Phone</th>
                                <th>Branch</th>
                                <th>Sponsor</th>
                                <th class="text-right">Actions</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            <!-- Data is loaded dynamically via JavaScript -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Create New Contact Form (Hidden Initially) -->
